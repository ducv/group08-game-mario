<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item >
        <shape >
		<!-- Phần chuyển sắc   -->          
            <gradient 
                android:startColor="#FFCCCC"
                android:endColor="#FFCCCC"
                android:angle="270"
                />
		<!-- phần đường viền -->
		<stroke
		    android:width="1dp"
		    android:color="#FFCC33"
		     />
		<!-- Bo góc -->
		 <corners
		     android:radius="10dp"
		      />
		 <!-- Phần padding khoảng trống xung quanh --> 
		 <padding 
		     android:left="10dp"
		     android:top="10dp"
		     android:right="10dp"
		     android:bottom="10dp"
		     />
        </shape>
    </item>

</selector>